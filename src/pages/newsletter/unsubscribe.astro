---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Unsubscribe - Newsletter" description="Manage your newsletter subscription">
  <section class="wrapper">
    <div class="text-center max-w-2xl mx-auto">
      <h1 class="text-4xl font-bold mb-6">Newsletter Unsubscribe</h1>
      
      <div class="bg-secondary/60 backdrop-blur-xs rounded-lg p-8 mb-8">
        <svg class="w-16 h-16 mx-auto mb-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <h2 class="text-2xl font-semibold mb-4">Unsubscribe is handled automatically by Resend</h2>
        <p class="mb-4">
          Every newsletter email includes an unsubscribe link in the footer.
        </p>
        <p class="text-sm opacity-80">
          Click the unsubscribe link in any newsletter email to stop receiving updates.
        </p>
      </div>

      <div class="bg-secondary/30 rounded-lg p-6 mb-8">
        <h3 class="text-xl font-semibold mb-3">How to Unsubscribe</h3>
        <ol class="text-left space-y-2">
          <li class="flex items-start">
            <span class="inline-block w-6 h-6 rounded-full bg-primary text-white text-center mr-3 flex-shrink-0 leading-6">1</span>
            <span>Open any newsletter email you received</span>
          </li>
          <li class="flex items-start">
            <span class="inline-block w-6 h-6 rounded-full bg-primary text-white text-center mr-3 flex-shrink-0 leading-6">2</span>
            <span>Scroll to the bottom of the email</span>
          </li>
          <li class="flex items-start">
            <span class="inline-block w-6 h-6 rounded-full bg-primary text-white text-center mr-3 flex-shrink-0 leading-6">3</span>
            <span>Click the "Unsubscribe" link</span>
          </li>
          <li class="flex items-start">
            <span class="inline-block w-6 h-6 rounded-full bg-primary text-white text-center mr-3 flex-shrink-0 leading-6">4</span>
            <span>You'll be instantly unsubscribed</span>
          </li>
        </ol>
      </div>

      <div class="mt-8">
        <a href="/" class="btn">
          Back to Homepage
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

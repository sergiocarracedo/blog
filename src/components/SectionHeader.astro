---
interface Props {
  title: string;
  subtitle?: string;
  class?: string;
  description?: string;
}

const { title, subtitle, class: className, description } = Astro.props;
---

<header class:list={[className || 'mb-10']}>
  <h1 class="font-impact font-bold color-primary text-3xl md:text-4xl">
    {title}
    {
      subtitle && (
        <span class="text-2xl md:text-3xl font-semibold text-primary-400">{subtitle}</span>
      )
    }
  </h1>
  {description && <h3 class="font-normal">{description}</h3>}
</header>

---
import FormattedDate from '../../FormattedDate.astro';
import PostTags from './PostTags.astro';
import ReadingTime from './ReadingTime.astro';

interface Props {
  date: Date;
  tags?: string[];
  readingTime?: number;
  class?: string;
  postId?: string;
}

const { date, tags, readingTime, class: className, postId } = Astro.props;
---

<aside class={className}>
  <div class="flex items-center gap-2 mb-2 flex-wrap">
    <FormattedDate date={date} class="text-sm" postId={postId} />

    <ReadingTime readingTime={readingTime} class="flex-1" postId={postId} />
  </div>

  <div>
    <PostTags tags={tags} postId={postId} />
  </div>
</aside>

---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<button
  class:list={[
    // Base styles
    'absolute flex items-center justify-center',
    'w-11 h-11 p-0 m-0',
    'bg-white/10 text-white border-2 border-white/30 rounded-md',
    'text-2xl leading-11 text-center',
    'cursor-pointer transition-all duration-200',
    'hover:bg-white/20 hover:border-white/50 hover:scale-105',
    'active:bg-white/30 active:scale-95',
    'font-sans align-middle',
    'z-[10001]',
    // Desktop positioning (above image)
    '-top-12 right-0',
    // Tablet/mobile overlay positioning
    'max-lg:top-2 max-lg:right-2 max-lg:w-10 max-lg:h-10 max-lg:leading-10',
    // Mobile
    'max-[480px]:w-9 max-[480px]:h-9 max-[480px]:text-xl max-[480px]:leading-9',
    'max-[480px]:top-1 max-[480px]:right-1',
    className,
  ]}
  aria-label="Close gallery"
  data-gallery-close

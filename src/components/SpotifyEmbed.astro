---
// SpotifyEmbed.astro
// Props: id (Spotify track ID), type (track/playlist), width, height
const { id, type, width, height } = Astro.props;
---

<iframe
  src={`https://open.spotify.com/embed/${type}/${id}`}
  title="Spotify player"
  width={width || '100%'}
  height={height || '380'}
  frameborder="0"
  allowtransparency="true"
  allow="encrypted-media"
  loading="lazy"
>
</iframe>

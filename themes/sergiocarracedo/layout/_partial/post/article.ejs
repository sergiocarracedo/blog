<div class="article container-fluid-1200">
  <div class="grid-row">
    <div class="main col-xs-12">
      <h1 class="title">
        <%- page.title %>
      </h1>
      <div class="stuff">
        <span><%- page.date.locale("es").format("DD MMMM YYYY") %></span>
      </div>

      <% if (page.cover) { %>
      <div class="article-image">
        <img src="<%- page.cover %>" alt="<%- page.title %>">
      </div>
      <% } %>
      <div class="content markdown">
        <%- page.content %>
      </div>
    </div>
  </div>
</div>

<div class="post-nav container-fluid-1200">
  <div class="grid-row">
    <div class="next col-xs-6">
      <% if (page.prev) { %>
        <div class="nav-previous">
          <a href="<%- config.root %><%- page.prev.path %>" rel="prev">
            <i class="fa fa-arrow-left"></i> <%- page.prev.title %>
          </a>
        </div>
      <% } %>
    </div>
    <div class="prev col-xs-6">
      <% if (page.next) { %>
        <div class="nav-next">
          <a href="<%- config.root %><%- page.next.path %>" rel="next">
            <%- page.next.title %> <i class="fa fa-arrow-right"></i>
          </a>
        </div>
      <% } %>
    </div>
  </div>
</div>

<div class="post-comments container-fluid-1200">
    <div id="disqus_thread">Para mostrar los comentarios es necesario la aceptaci√≥n del uso de cookies</div>
</div>


